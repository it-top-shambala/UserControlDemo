<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StyleDefault" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="StyleArticle" TargetType="TextBlock"
           BasedOn="{StaticResource StyleDefault}">
        <Setter Property="Foreground" Value="Brown" />
    </Style>

    <Style x:Key="StyleName" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="FontWeight" Value="ExtraBlack" />
        <Setter Property="FontSize" Value="25" />
    </Style>

    <Style x:Key="StylePrice" TargetType="TextBlock"
           BasedOn="{StaticResource StyleDefault}">
        <Setter Property="Foreground" Value="Blue" />
    </Style>

    <Style x:Key="StyleBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
</ResourceDictionary>
